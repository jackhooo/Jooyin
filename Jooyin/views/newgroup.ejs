  <script language="javascript">
    function Check()  
    {
    if (document.send.start_date.value=="" && document.send.start_time.value=="")
    {
        alert('請輸入完整起始時間!');
        return false;
    }
    if (document.send.end_date.value=="" && document.send.end_time.value=="")
    {
        alert('請輸入完整結束時間!');
        return false;
    }
    
    return true;
}
